<!DOCTYPE html>
<html lang="en">
    <%- include('../templates/head', {title: 'Login'}); %>

        <body>
            <%- include('../templates/navbar'); %>

                <!-- Login FORM  -->
                <div class="container">
                    <div class="login-container">
                        <div id="output"></div>
                        <div class="avatar"></div>
                        <div class="form-box">
                            <form action="/login" method="POST">
                                <input class="formField" name="user[email]" type="text" placeholder="Email">
                                <input class="formField" type="password" name="user[password]" placeholder="Password">
                                <button class="btn btn-info btn-block login" type="submit">Login</button>
                            </form>
                        </div>
                    </div>
                </div>

        </body>

</html>
